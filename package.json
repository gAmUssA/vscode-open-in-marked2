{
  "name": "vscode-open-in-marked2",
  "displayName": "Better Open in Marked2",
  "description": "Open Markdown files in Marked 2 for preview",
  "version": "1.0.0",
  "publisher": "vikgamov",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "badges": [],
  "homepage": "https://github.com/gAmUssA/vscode-open-in-marked2#readme",
  "bugs": {
    "url": "https://github.com/gAmUssA/vscode-open-in-marked2/issues"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Formatters"
  ],
  "extensionKind": ["ui"],
  "keywords": [
    "markdown",
    "marked",
    "marked2",
    "preview",
    "macos",
    "asciidoc",
    "documentation"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:asciidoc"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "openInMarked2.open",
        "title": "Open in Marked 2",
        "icon": "$(eye)"
      },
      {
        "command": "openInMarked2.openFolder",
        "title": "Open Folder in Marked 2",
        "icon": "$(folder)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "openInMarked2.open",
          "when": "(resourceLangId == markdown || resourceLangId == asciidoc) && config.openInMarked2.showEditorTitleButton",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "openInMarked2.open",
          "when": "(resourceLangId == markdown || resourceLangId == asciidoc) && config.openInMarked2.showContextMenu",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "openInMarked2.open",
          "when": "(resourceLangId == markdown || resourceLangId == asciidoc) && config.openInMarked2.showContextMenu",
          "group": "navigation"
        },
        {
          "command": "openInMarked2.openFolder",
          "when": "explorerResourceIsFolder && config.openInMarked2.showFolderContextMenu",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "openInMarked2.open",
        "key": "cmd+shift+m",
        "when": "resourceLangId == markdown || resourceLangId == asciidoc"
      }
    ],
    "configuration": {
      "title": "Open in Marked 2",
      "properties": {
        "openInMarked2.appPath": {
          "type": "string",
          "default": "/Applications/Marked 2.app",
          "description": "Path to the Marked 2 application"
        },
        "openInMarked2.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save the file before opening in Marked 2"
        },
        "openInMarked2.showEditorTitleButton": {
          "type": "boolean",
          "default": true,
          "description": "Show the Open in Marked 2 button in the editor title bar"
        },
        "openInMarked2.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show the Marked 2 status bar indicator"
        },
        "openInMarked2.showContextMenu": {
          "type": "boolean",
          "default": true,
          "description": "Show Open in Marked 2 in context menus"
        },
        "openInMarked2.showFolderContextMenu": {
          "type": "boolean",
          "default": true,
          "description": "Show Open Folder in Marked 2 in folder context menu"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "build": "node esbuild.js",
    "build:watch": "node esbuild.js --watch",
    "package": "node esbuild.js --production",
    "vscode:prepublish": "npm run package",
    "vsce:package": "vsce package",
    "vsce:publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "esbuild": "^0.19.8",
    "eslint": "^8.55.0",
    "typescript": "^5.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gAmUssA/vscode-open-in-marked2"
  },
  "license": "MIT"
}
